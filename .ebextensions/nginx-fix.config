option_settings:
  aws:elasticbeanstalk:environment:proxy:
    ProxyServer: nginx

  aws:elasticbeanstalk:application:environment:
    PORT: 5000

container_commands:
  01_update_nginx:
    command: |
      sed -i 's/localhost:8080/localhost:5000/g' /etc/nginx/conf.d/elasticbeanstalk/*.conf
      service nginx restart
